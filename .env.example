# ===================== Google Auth (modo real) =====================
# Fuente real en config.json -> gmail.scopes ; esto es fallback
GOOGLE_APPLICATION_CREDENTIALS=./credentials.json
GMAIL_SCOPES="gmail.readonly gmail.modify"
CALENDAR_SCOPES="calendar.readonly"

# ===================== LLM (opcional en MVP) =====================
LLM_PROVIDER=openrouter
LLM_MODEL=mistral-small-latest
LLM_API_KEY=sk-xxxxx

# ===================== Summarizer / Gmail (compat) =====================
SUMMARY_MAX_CHARS=280
GMAIL_MAX_RESULTS=10
GMAIL_PRIMARY_EMAIL=carolina@home.cl
GMAIL_TIMEZONE=America/Santiago

# ===================== Modo fake (recomendado dev/QA) =====================
USE_FAKE_GMAIL=1
FAKE_EMAILS_PATH=tests/fixtures/emails_home.json
FAKE_CONTACTS_FILE=tests/fixtures/contacts_retail.json

# ===================== Server =====================
HOST=127.0.0.1
PORT=8000
APP_SECRET_KEY=clave_secreta_123
CACHE_TTL_SECONDS=60
RATE_LIMIT_PER_MINUTE=30

# ===================== Logging =====================
LOG_LEVEL=INFO
GMAIL_TIMING=0

# ===================== H4 Robustez (OPCIONAL - compat; la fuente real es config.json) =====================
# Si las defines acá, solo actúan como fallback cuando falten en config.json
GMAIL_BACKOFF_MAX_TRIES=3
GMAIL_BACKOFF_BASE_MS=200
GMAIL_BACKOFF_JITTER_MS=100
GMAIL_FIELDS_LIST="messages(id),nextPageToken"
GMAIL_FIELDS_GET="id,internalDate,labelIds,snippet,payload(headers(name,value))"
# JSON string (lista de headers)
GMAIL_HEADERS_GET=["From","Subject","Date","To","Cc"]
