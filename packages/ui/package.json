{
  "name": "@nexusg/ui",
  "version": "0.1.0",
  "description": "NexusG UI â€” componentes React minimalistas para main-ui",
  "private": false,
  "type": "module",
  "sideEffects": false,
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./package.json": "./package.json",
    "./*": "./dist/*"
  },
  "scripts": {
    "clean": "node -e \"try{require('fs').rmSync('dist',{recursive:true,force:true})}catch(_){}\"",
    "build": "npm run clean && npx -y -p typescript@5.4.5 tsc -p tsconfig.json --outDir dist",
    "typecheck": "npx -y -p typescript@5.4.5 tsc -p tsconfig.json --noEmit"
  },
  "peerDependencies": {
    "react": "^18.2.0 || ^18.3.1",
    "react-dom": "^18.2.0 || ^18.3.1"
  },
  "devDependencies": {
    "@types/react": "18.3.3",
    "@types/react-dom": "18.3.0",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "typescript": "5.4.5"
  },
  "license": "MIT",
  "engines": {
    "node": ">=18.17"
  }
}
